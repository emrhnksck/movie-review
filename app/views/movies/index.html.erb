<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<div class="row">

  <% @movies.each do |movie| %>

  <div class="col-3 ms-6 card" style="width: 18rem;">
    <img src="<%=(url_for(movie.image))%>" class="card-img-to">
    <div class="card-body">
      <h5 class="card-title"><%= movie.name %></h5>
      <p class="card-text"><%= movie.description %></p>
      <%= link_to "Show Movie", movie_path(movie) , class:"btn btn-primary" %>
    </div>
  </div>
  <% end %>

</div>
